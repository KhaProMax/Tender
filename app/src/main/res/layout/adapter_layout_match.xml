<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/woman_0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_toEndOf="@id/img_profile"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/md_grey_800"
            android:textSize="18sp"
            android:textStyle="bold"
            android:start="@id/img_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_profile"
            tools:ignore="NotSibling" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 year old"
            android:textColor="@color/md_grey_400"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@+id/text_name"
            app:layout_constraintBottom_toTopOf="@id/text_date"
            android:id="@+id/text_age"/>

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/4/2024"
            android:textColor="@color/md_grey_400"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/text_name"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintBottom_toTopOf="@id/title"
            tools:ignore="UnknownIdInLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            app:layout_constraintStart_toEndOf="@id/img_profile"
            app:layout_constraintTop_toBottomOf="@id/text_date"
            android:text="Title"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="NotSibling" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/layout_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_profile">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message"/>

        <ImageView
            android:id="@+id/img_content"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:src="@drawable/cat"
            android:scaleType="centerCrop"
            android:textColor="@color/white"
            android:layout_below="@id/message"
            />

    </RelativeLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layout_image_container">


        <ImageView
            android:id="@+id/img_like"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_like_24dp"
            app:tint="@color/white"
            android:padding="10dp"
            android:background="@drawable/circle_green_background"
            android:layout_marginEnd="20dp"/>



        <ImageView
            android:id="@+id/img_chat"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/chat_processing"
            android:padding="10dp"
            android:background="@drawable/circle_blue_background"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/layout_image_container">

        <ImageView
            android:id="@+id/img_location"
            android:src="@drawable/ic_location_on_blue_24dp"
            app:tint="#C0C0C0"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ha Noi: 8 km"
            android:textSize="16sp"
            android:layout_toEndOf="@id/img_location"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

    </RelativeLayout>
